---
import likeIcon from "../assets/likeIcon.webp";
import dislikeIcon from "../assets/dislikeIcon.webp";
import type { Question } from "../types/Question";

interface Props {
  questions: Question[];
}

const { questions } = Astro.props;
---

<div class="container">
  <div class="bg-[#FB2004] p-2">
    <div class="bg-white p-2 rounded-xl text-center leading-3">
      {
        questions.map((question, i) => (
          <div
            class={`grid grid-cols-8 font-bold ${i === 4 ? "mt-5" : ""} ${i !== 0 ? "mt-1" : ""}`}
          >
            <p class="flex justify-center self-center col-span-1 border-solid border-[1px] border-red-500 rounded-xl p-2">
              <span style="font-size: 14px;" class="mt-1">
                {i + 1}
              </span>
              {i !== 4 && (
                <img
                  src={question.loSabe ? likeIcon.src : dislikeIcon.src}
                  width="15px"
                  class="justify-self-center ml-1"
                />
              )}
            </p>
            <p class="col-span-5 border-solid border-[1px] border-red-500 bg-red-100 rounded-xl content-center px-2 text-pretty">
              {question.pregunta}
            </p>
            <p class="col-span-2 bg-[#FB2004] rounded-xl content-center text-white">
              {question.respuesta}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</div>

<style>
  * {
    font-size: 10px;
  }

  .container {
    page-break-inside: avoid;
  }
</style>
